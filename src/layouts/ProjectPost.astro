---
const { frontmatter } = Astro.props
import { Image } from 'astro:assets';
---

<div class="flex flex-col mb-20">
    <div>
        <div class="max-w-80 sm:float-right relative z-1 sm:ml-4 sm:mt-8 mb-2 lg:max-xl:float-none lg:max-xl:m-0">
            <Image class="w-fit min-[425px]:max-md:max-w-60 h-auto border border-ts-blue-medium rounded-xs shadow" src={frontmatter.cover} alt={frontmatter.coverAlt} />
        </div>
        <h3 class="my-4 text-2xl font-bold text-ts-blue-bright relative before:absolute before:block before:-inset-1 before:-left-6 before:-right-4 before:bg-black/10 after:absolute after:block after:size-5 after:-left-7.5 after:-top-2.5 after:bg-black/10 ">{frontmatter.title}</h3>
        <p>{frontmatter.description}</p>
        <slot />
        <ul class="flex flex-wrap gap-2">
            {
                frontmatter.tags.map((tag: string) => (
                    <li class="skill-tag text-base">{tag}</li>
                ))
            }
        </ul>
    </div>
</div>